<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="org.learn.data.User" table="user">
      <meta attribute="class-description">
         This class contains the user details. 
      </meta>
      <id name="id" type="int" column="uid">
         <generator class="native"/>
      </id>
      <property name="email" column="uemail" type="string"/>
      <property name="password" column="upassword" type="string"/>
   </class>
</hibernate-mapping>